
// namespace Flux::Compiling;

class IRScope {
	IRDefinitionPointer[] definitions;
	string[] isUsing;

	IRScope(IRDefinitionHeap heap) {
		self.definitions = [];
		self.isUsing = [];
		self.heap = heap;
	}

	// adds a definition
	void define(IRDefinition def);
	// looks up the given name in its definitions
	IRDefinitionPointer[] lookup(string name, bool hasPrivate);

	// registers the given namespace name to be used when looking things up by IRState at the root-level
	void use(string name);
}

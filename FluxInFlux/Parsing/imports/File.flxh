
import Context;
import Lexer;
import types.Type;
import definitions.Definition;
import ASTNode;

namespace Flux::Parsing;

class File {
	string name;
	string path;

	File[] imports;

	Type[] types;
	ASTNode[] statements;

	Lexer lexer;

	Context[] contexts;
	Block[] blocks;

	void File(string name, string path) {
		self.name = name;
		self.path = path;
		self.imports = [];
		self.types = [];
		self.statements = [];
		self.contexts = [];
		self.blocks = [];
	}

	void initialise_lexer(string source);

	void add_import(File file);

	void define_type(Type t);
	void push(ASTNode node);

	Context push_context();
	void pop_context();

	void push_block(Position position, bool is_void);
	Block pop_block();
}

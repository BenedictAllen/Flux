
namespace Flux::Parsing;

class ExternReference {
	string name;
	bool is_name_set;

	ExternReference(string name, bool is_name_set) {
		self.name = name;
		self.is_name_set = is_name_set;
	}

	string serialize();
}

string ExternReference:serialize()
	= self.is_name_set && "extern (" `concat` self.name `concat` ")" || "extern";

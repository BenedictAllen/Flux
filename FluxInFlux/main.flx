
import flux;

let source_code = "
while true
	if this
		break;

while true do return print \"Hi!\";
";

void main() {
	new Flux::Parsing::Source source();
	new Flux::Parsing::Lexer lexer( source_code );

	source.lexer = lexer;

	while !lexer:isEOF() {
		let expr = Flux::Parsing::Statement:parse( source );
		if expr
			print( expr:serialize() );
		else {
			print( "Nope" );
			break;
		}
	}
}

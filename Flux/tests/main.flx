enum PositionMode {
	LEFT, RIGHT;
	BOTTOM, TOP;
}

void addButtonToElement( Button b, Element e )
	e:addChild( b );

void positionButtonInContainer( Button b, Container c, PositionMode p ) {
	switch p;
	case PositionMode.LEFT
		b.x = 0;
	case PositionMode.RIGHT
		b.x = c.width - b.width;
	case PositionMode.TOP
		b.y = 0;
	case PositionMode.BOTTOM
		b.y = c.height - b.height;
}

